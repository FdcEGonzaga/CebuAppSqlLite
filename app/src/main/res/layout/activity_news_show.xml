<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/sinulogbg2"
    tools:context=".controllers.NewsShowActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/show_news_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Title of the news will be here."
                        android:textColor="@color/blue"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:id="@+id/show_news_img"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/logo"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/show_news_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightBlue"
                        android:text="Author: Elmer Gonzaga"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/show_news_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:text="Monday, May 18, 2022"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/show_news_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/news_sample_text"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/show_news_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/news_sample_text"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />

                   </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>