<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/sinulogbg2"
    tools:context=".controllers.NewsShowActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/jobDetailImg"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/logo"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/jobDetailField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightBlue"
                        android:text="--------------------------------------------------------"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/jobDetailTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WEB DEVELOPER"
                        android:textColor="@color/blue"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/jobDetailCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightBlue"
                        android:text="COMPANY"
                        android:textSize="16sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/jobDetailDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:text="MAY 18, 2022"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/jobDetailYears"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightBlue"
                        android:text="2 YEARS EXPERIENCE"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/jobDetailSalary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightBlue"
                        android:text="P 20,000"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/jobDetailDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/news_sample_text"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/jobDetailDesc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/news_sample_text"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>